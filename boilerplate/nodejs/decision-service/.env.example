# Environment Variables for Decision Service
# Copy this file to .env and fill in the values

# Node environment (development, test, production)
NODE_ENV=development

# HTTP server port
PORT=3001

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Market Data Service gRPC URL
MARKET_DATA_SERVICE_URL=market-data-processor:50051

# Order Execution Service gRPC URL
ORDER_EXECUTION_URL=order-execution:50052

# RabbitMQ connection string
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# Redis connection string
REDIS_URL=redis://redis:6379/0

# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/mexc_trading

# LLM API settings
LLM_API_KEY=your_api_key_here
LLM_API_URL=https://api.openai.com/v1
