{
  "system": {
    "logging": {
      "level": "INFO",
      "format": "json",
      "include_timestamps": true,
      "include_line_numbers": true,
      "max_file_size_mb": 10,
      "backup_count": 5,
      "console_colors": true,
      "enable_masking": true,
      "masked_fields": [
        "password", 
        "api_key", 
        "api_secret", 
        "secret", 
        "token", 
        "access_key", 
        "private_key"
      ],
      "component_filter": null,
      "syslog": {
        "enabled": false,
        "host": "localhost",
        "port": 514,
        "facility": 1
      },
      "cloudwatch": {
        "enabled": false,
        "region": "us-east-1",
        "log_group": "crypto-trading",
        "log_stream": "app-logs"
      },
      "google_cloud": {
        "enabled": false,
        "project_id": "",
        "log_name": "crypto-trading"
      }
    }
  }
}
