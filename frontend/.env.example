# API Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WEBSOCKET_URL=ws://localhost:8001

# Trading API Configuration
REACT_APP_TRADING_MODE=mock # Options: mock, paper, live
REACT_APP_DEFAULT_EXCHANGE=binance # Options: binance, coinbase, alpaca, etc.

# Binance API (only needed if using Binance)
REACT_APP_BINANCE_API_KEY=your_binance_api_key_here
REACT_APP_BINANCE_API_SECRET=your_binance_api_secret_here

# Coinbase API (only needed if using Coinbase)
REACT_APP_COINBASE_API_KEY=your_coinbase_api_key_here
REACT_APP_COINBASE_API_SECRET=your_coinbase_api_secret_here
REACT_APP_COINBASE_PASSPHRASE=your_coinbase_passphrase_here

# Alpaca API (only needed if using Alpaca)
REACT_APP_ALPACA_API_KEY=your_alpaca_api_key_here
REACT_APP_ALPACA_API_SECRET=your_alpaca_api_secret_here
REACT_APP_ALPACA_PAPER_TRADING=true

# Feature Flags
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_REAL_TIME_UPDATES=true
REACT_APP_ENABLE_ADVANCED_CHARTING=true

# Monitoring and Analytics
REACT_APP_SENTRY_DSN=your_sentry_dsn_here
REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id_here
