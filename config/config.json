{
  "system": {
    "name": "Trading System Overseer",
    "version": "1.0.0"
  },
  "trading": {
    "default_pairs": [
      "BTCUSDC",
      "ETHUSDC",
      "SOLUSDC"
    ],
    "risk_level": "moderate"
  },
  "notifications": {
    "level": "all",
    "frequency": "medium"
  },
  "plugins": [
    {
      "id": "visualization",
      "path": "system_overseer.plugins.visualization.visualization_plugin.VisualizationPlugin",
      "enabled": true,
      "config": {
        "default_pairs": [
          "BTCUSDC",
          "ETHUSDC",
          "SOLUSDC"
        ],
        "default_interval": "15m",
        "default_chart_type": "candlestick"
      }
    },
    {
      "id": "llm_chart_integration",
      "path": "system_overseer.llm_chart_integration.LLMChartIntegration",
      "enabled": true,
      "config": {}
    }
  ],
  "visualization": {
    "default_pairs": [
      "BTCUSDC",
      "ETHUSDC",
      "SOLUSDC"
    ],
    "default_timeframe": "1h",
    "chart_types": [
      "candlestick",
      "line"
    ],
    "indicators": [
      "sma",
      "ema"
    ],
    "auto_refresh": true,
    "refresh_interval": 60,
    "data_provider": "mexc"
  }
}